<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
android:background="@color/ppreBeige"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/twoH"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/level2size"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:id="@+id/listlinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/item_en"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/s_core_dream_6"
                android:text="enName"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_kr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/s_core_dream_6"
                android:text="krName"
                android:textAlignment="textStart"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/s_core_dream_5_medium"
                android:text="date"
                android:textAlignment="textEnd" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>