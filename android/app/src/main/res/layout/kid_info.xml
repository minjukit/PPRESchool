<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@drawable/kid_info2">


    <Button

        android:id="@+id/kid_delete"

        android:layout_width="45dp"

        android:layout_height="43dp"

        android:layout_marginStart="669dp"

        android:layout_marginTop="152dp"

        android:layout_marginEnd="241dp"

        android:background="#00000000"

        android:visibility="visible"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.285"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />


    <Button

        android:id="@+id/kid_next"

        android:layout_width="89dp"

        android:layout_height="51dp"

        android:layout_marginStart="438dp"

        android:layout_marginEnd="435dp"

        android:layout_marginBottom="145dp"

        android:background="#00000000"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />


    <EditText

        android:id="@+id/kid_name"

        android:layout_width="207dp"

        android:layout_height="43dp"

        android:layout_marginStart="403dp"

        android:layout_marginTop="203dp"

        android:layout_marginEnd="352dp"

        android:ems="7"

        android:inputType="textPersonName"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />


    <EditText

        android:id="@+id/kid_year"

        android:layout_width="115dp"

        android:layout_height="38dp"

        android:layout_marginStart="403dp"

        android:layout_marginBottom="200dp"

        android:ems="10"

        android:hint="YYYY"

        android:inputType="textPersonName"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/kid_month"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText

        android:id="@+id/kid_month"

        android:layout_width="68dp"

        android:layout_height="41dp"

        android:layout_marginStart="22dp"

        android:layout_marginEnd="353dp"

        android:layout_marginBottom="200dp"

        android:ems="10"

        android:hint="MM"

        android:inputType="textPersonName"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kid_year" />


    <RadioGroup

        android:id="@+id/radiogroup"

        android:layout_width="198dp"

        android:layout_height="41dp"

        android:layout_marginStart="387dp"

        android:layout_marginEnd="342dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/kid_month"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.457"

        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/s_core_dream_5_medium"
            android:text="남자                          "
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/s_core_dream_5_medium"
            android:text="여자"
            android:textSize="22sp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>