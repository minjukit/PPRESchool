<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2C4"
    android:backgroundTint="#FFF2C4"
    android:clickable="true">

    <Button
        android:id="@+id/u_button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="286dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/button_custom"
        android:text="u"
        android:textAllCaps="false"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/v_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <Button
        android:id="@+id/v_button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="46dp"
        android:background="@drawable/button_custom"
        android:text="v"
        android:textAllCaps="false"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/u_button"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="452dp"
        android:layout_height="26dp"
        android:layout_marginStart="286dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="491dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@android:drawable/progress_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/listen"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="232dp"
        android:background="@drawable/music_therapy"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>