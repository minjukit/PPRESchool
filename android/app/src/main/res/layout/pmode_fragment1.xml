<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:background="@drawable/pmode_background6"
    tools:context=".pmode.PmodeFragment1">

    <TextView
        android:id="@+id/p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="197dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/s_core_dream_5_medium"
        android:text="프로필이름"
        android:textColor="#000000"
        android:textSize="45sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/p_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="38dp"
        app:civ_border_color="#000000"
        tools:src="@drawable/basic_profile" />

    <ImageView
        android:id="@+id/p_level_pic"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="93dp"
        android:layout_marginBottom="158dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/p_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="211dp"
        android:layout_marginTop="162dp"
        android:fontFamily="@font/s_core_dream_6"
        android:text="레벨"
        android:textColor="#000000"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/level_info"
        android:layout_width="558dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="211dp"
        android:layout_marginBottom="157dp"
        android:fontFamily="@font/s_core_dream_5_medium"
        android:text="레벨설명"
        android:textColor="#252525"
        android:textSize="20sp" />

    <Button
        android:id="@+id/p_change"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="98dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/round_custom_green"
        android:fontFamily="@font/s_core_dream_6"
        android:text="정보변경"
        android:textSize="40sp" />

    <Button
        android:id="@+id/p_home"
        android:layout_width="44dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="127dp"
        android:background="@drawable/home" />

</RelativeLayout>