<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#FFF2C4"
    android:backgroundTint="#FFF2C4"
    android:clickable="false">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="452dp"
        android:layout_height="26dp"
        android:layout_marginStart="286dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="286dp"
        android:layout_marginBottom="491dp"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@android:drawable/progress_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <Button
        android:id="@+id/A_button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/button_custom"
        android:text="A"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/B_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/B_button"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="284dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/button_custom"
        android:text="B"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/A_button"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/listen"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="62dp"
        android:background="@drawable/music_therapy"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/A_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>